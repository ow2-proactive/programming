		<property name="schemas.website.dir" value="/net/servers/www-sop/teams/oasis/proactive/schemas/gcm/1.0/" />
		<mkdir dir="${schemas.website.dir}" />
		<copy todir="${schemas.website.dir}" includeEmptyDirs="no" overwrite="true" >
